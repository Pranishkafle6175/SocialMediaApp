<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/itempostcircularimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/itempostusernametextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Username"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/itempostmore"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_more"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="210dp"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/itempostimage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                tools:ignore="MissingConstraints"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/like"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_like"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/itempostcomment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_comment"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/itempostsave"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_save"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="270dp"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/itempostnooflike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 Likes"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/itempostnametextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pranish Kafle"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/itempostdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description..."
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/itempostnoofcomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Comments.."
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>


    </LinearLayout>
</RelativeLayout>